<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_main"
    tools:context=".HostActivity">


    <Button
        android:id="@+id/host_button"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_background"
        android:fontFamily="casual"
        android:onClick="createRoom"
        android:text="@string/host_create_room"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintStart_toEndOf="@+id/main_name" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_background"
        android:fontFamily="casual"
        android:onClick="playGame"
        android:text="@string/play_game"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintStart_toEndOf="@+id/main_name" />

    <EditText
        android:id="@+id/host_text_view"
        android:layout_width="512dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:background="@drawable/button_background"
        android:hint="@string/host_text_prompt"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintStart_toEndOf="@+id/main_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/host_button"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintStart_toEndOf="@+id/main_name"
        app:layout_constraintTop_toBottomOf="@+id/host_text_view" />


    <TextView
        android:id="@+id/main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="@string/main_name_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="q"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player2_view"
        app:layout_constraintEnd_toStartOf="@+id/player3_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player3_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Marian"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player4_view"
        app:layout_constraintEnd_toStartOf="@+id/player5_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player1_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player5_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="asfda"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player6_view"
        app:layout_constraintEnd_toStartOf="@+id/player7_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player3_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player7_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player8_view"
        app:layout_constraintEnd_toStartOf="@+id/player9_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player5_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player9_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="casual"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player10_view"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player7_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="fadf"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/room_code_view"
        app:layout_constraintEnd_toStartOf="@+id/player4_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/main_name"
        app:layout_constraintTop_toBottomOf="@+id/player1_view" />

    <TextView
        android:id="@+id/player4_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="sdd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/room_code_view"
        app:layout_constraintEnd_toStartOf="@+id/player6_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player2_view"
        app:layout_constraintTop_toBottomOf="@+id/player3_view" />

    <TextView
        android:id="@+id/player6_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/room_code_view"
        app:layout_constraintEnd_toStartOf="@+id/player8_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player4_view"
        app:layout_constraintTop_toBottomOf="@+id/player5_view" />

    <TextView
        android:id="@+id/player8_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/room_code_view"
        app:layout_constraintEnd_toStartOf="@+id/player10_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player6_view"
        app:layout_constraintTop_toBottomOf="@+id/player7_view" />

    <TextView
        android:id="@+id/player10_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/room_code_view"
        app:layout_constraintEnd_toStartOf="@+id/room_code_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/player8_view"
        app:layout_constraintTop_toBottomOf="@+id/player9_view" />


</androidx.constraintlayout.widget.ConstraintLayout>